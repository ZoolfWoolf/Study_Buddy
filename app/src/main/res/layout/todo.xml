<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="8dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp">

    <RelativeLayout
        android:id="@+id/todoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background = "@color/cardview_light_background">

        <CheckBox
            android:id="@+id/todoCheckDone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#c51162"
            android:buttonTint="@color/white"/>

        <TextView
            android:id="@+id/todoTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/todoCheckDone"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:textColor="#c51162"
            android:maxLines="3"
            android:layout_toStartOf="@+id/todoTaskTime"
            android:layout_centerVertical="true"
            
             />

        <TextView
            android:id="@+id/todoTaskTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:textColor="#c51162"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>