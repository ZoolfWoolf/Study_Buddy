<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:id="@+id/todayCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg1">

        <TextView
            android:id="@+id/todayCourse"
            android:textColor="#FFFFFF"
            android:text="Database management"
            android:layout_alignParentTop="true"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/todayTeacher"
            android:layout_width="wrap_content"
            android:textColor="#C5C3BF"
            android:text="Zulfiqar Chaudhry"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/todayCourse"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/todaySection"
            android:layout_width="wrap_content"
            android:textColor="#C5C3BF"
            android:text="C1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/todayTeacher"/>


        <TextView
            android:id="@+id/todayTime"
            android:layout_alignParentEnd="true"
            android:text="12:00"
            android:layout_alignTop="@+id/todayCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/todayDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/todayTime"
            android:layout_alignParentEnd="true"
            android:text="Duration: 1.5"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:textColor="#CFC6C6"/>

        <TextView
            android:id="@+id/todayRoom"
            android:text="CS-12"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_below="@+id/todayTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginRight="5dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>