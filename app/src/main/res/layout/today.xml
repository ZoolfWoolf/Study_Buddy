<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/todayCourseTitle"
            android:background="#004ba0">
            <TextView
                android:id="@+id/todayCourse"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:text="Database management"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/todayCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/todayTeacher"
                android:layout_width="wrap_content"
                android:textColor="#004ba0"
                android:text="Zulfiqar Chaudhry"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/todaySection"
                android:layout_width="wrap_content"
                android:textColor="#004ba0"
                android:text="C1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/todayTeacher"/>


            <TextView
                android:id="@+id/todayTime"
                android:layout_alignParentEnd="true"
                android:text="12:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginRight="5dp"
                android:textColor="#004ba0"/>
            <TextView
                android:id="@+id/todayDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/todayTime"
                android:layout_alignParentEnd="true"
                android:text="Duration: 1.5"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:textColor="#004ba0"/>

            <TextView
                android:id="@+id/todayRoom"
                android:text="CS-12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#004ba0"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="30sp" />

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>